{
  "manifest_version": 2,
  "name": "CopyPastor",
  "description": "Keep track of what you copy/paste on the web",
  "version": "1.0",
  "icons": {
    "128": "images/128.png",
    "48": "images/48.png",
    "16": "images/16.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "unlimitedStorage"
  ],
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "images/16.png",
    "default_popup": "static/popup.html"
  }
}